@model List<BookViewModel>

<h1>Kitaplar Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Tür</th>
            <th>Yayın Tarihi</th>
            <th>ISBN</th>
            <th>Kopya Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.AuthorName</td>
                <td>@book.Genre</td>
                <td>@book.PublishDate.ToShortDateString()</td>
                <td>@book.ISBN</td>
                <td>@book.CopiesAvailable</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id">Detaylar</a> |
                    <a asp-action="Edit" asp-route-id="@book.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@book.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Yeni Kitap Ekle</a>
