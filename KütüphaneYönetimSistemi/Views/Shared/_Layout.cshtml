<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Yönetim Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Kütüphane Yönetim Sistemi</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link"  asp-controller="Book" asp-action="List">Kitaplar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  asp-controller="Author" asp-action="List">Yazarlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  asp-controller="Auth" asp-action="Login">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  asp-controller="Auth" asp-action="SignUp">Kayıt Ol</a>
                    </li>
                    
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-muted">Tüm hakları saklıdır &copy; @DateTime.Now.Year</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
