@model IEnumerable<KütüphaneYönetimSistemi.ViewModels.AuthorViewModel>

<h1>Yazarlar Listesi</h1>

<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Doğum Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@author.Id">Detaylar</a> |
                    <a asp-action="Edit" asp-route-id="@author.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@author.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Yeni Yazar Ekle</a>
